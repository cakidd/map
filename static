<!DOCTYPE html>
<html>
<head>
    <style>
        #mapContainer {
            position: relative;
        }
        #overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: transparent;
            cursor: pointer;
            z-index: 100;
        }
    </style>
    <script src="https://js.arcgis.com/4.28/"></script>
    <script>
        require(["esri/Map", "esri/views/MapView"], (Map, MapView) => {
            const map = new Map({ basemap: "streets" });
            const view = new MapView({
                container: "mapView",
                map: map,
                center: [-118.2437, 34.0522], // Your map's center
                zoom: 10,
                ui: { components: [] } // Remove default UI
            });

            // Add click-to-interact overlay
            const overlay = document.getElementById("overlay");
            overlay.addEventListener("click", () => {
                overlay.style.display = "none";
                view.ui.add("zoom"); // Re-enable zoom controls
            });
        });
    </script>
</head>
<body>
    <div id="mapContainer">
        <div id="overlay"></div>
        <div id="mapView" style="height: 600px;"></div>
    </div>
</body>
</html>
